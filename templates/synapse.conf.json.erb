{
  "service_conf_dir": "<%= scope.lookupvar('synapse::config_dir') %>",
  "haproxy": {
    "reload_command": "service haproxy reload",
    "config_file_path": "/etc/haproxy/haproxy.cfg",
    "socket_file_path": "<%= scope.lookupvar('synapse::stats_socket') %>",
    "do_writes": true,
    "do_reloads": true,
    "do_socket": true,
    "global": [
      "daemon",
      "user <%= scope.lookupvar('synapse::user') %>",
      "group <%= scope.lookupvar('synapse::group') %>",
      "maxconn 4096",
      "log     127.0.0.1 local0",
      "log     127.0.0.1 local1 notice",
      "stats   socket <%= scope.lookupvar('synapse::stats_socket') %> mode 666 level admin"
    ],
    "defaults": [
      "log      global",
      "option   dontlognull",
      "maxconn  2000",
      "retries  3",
      "timeout  connect 5s",
      "timeout  client  1m",
      "timeout  server  1m",
      "option   redispatch",
      "balance  roundrobin"
    ],
    "extra_sections": {
      "listen stats :3212": [
        "mode http",
        "stats enable",
        "stats uri /",
        "stats refresh 5s"
      ],
      "frontend http-generic-in": [
        "bind 127.0.0.1:80",
        "acl is_service1 hdr_dom(host) -i service1.lb",
        "acl is_cache hdr_dom(host) -i cache.lb",
        "use_backend service1 if is_service1",
        "use_backend cache if is_cache"
      ]
    }
  }
}
